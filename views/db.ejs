<!DOCTYPE html>
<html>
<head>
</head>
<body>
<div class="container">
    <h2>Database Results</h2>

    <table border ="1">
        <tr>
            <th>ID</th>
            <th>Book Name</th>
            <th>Author</th>
        </tr>
        <% results.forEach(function(r) { %>
            <tr>
                <td>
                    <%= r.id %>
                </td>
                <td>
                    <%= r.book_name %>
                </td>
                <td>
                    <%= r.author_name %>
                </td>
            </tr>
        <% }); %>
    </table>

</div>
</body>
</html>