<!DOCTYPE html>
<html>
<head>
</head>
<body>
<div class="container">
    <h2>Database Results</h2>
    <ul>
        <% results.forEach(function(r) { %>
            <li><%= r.id %> - <%= r.name %></li>
        <% }); %>
    </ul>

    <table>
        <% results.forEach(function(r) { %>
            <tr>
                <td>
                    <%= r.id %>
                </td>
                <td>
                    <%= r.book_name %>
                </td>
                <td>
                    <%= r.author_name %>
                </td>
            </tr>
        <% }); %>
    </table>

</div>
</body>
</html>